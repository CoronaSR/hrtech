@model IEnumerable<HR_Tech.Models.Solicitud>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Solicitudes";
    ViewBag.PageName = "Solicitudes";
    ViewBag.PageTitle = "Lista de Solicitudes";
    ViewBag.PageDescription = "";
}

<div class="widget-header">
    <div class="row">
        <div class="col-xl-10 col-md-10 col-sm-10 col-10">
            <h4>Lista de empleados</h4>
        </div>
        <div class="col-xl-2 col-md-2 col-sm-2 col-2">
            <a asp-action="Create" class="btn btn-primary btn-rounded mt-2">Create New</a>
        </div>
    </div>
</div>
<div class="widget-content widget-content-area">
    <div class="table-responsive">
        <table class="table table-bordered mb-4">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdEmpleado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiasSolicitados)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaSolicitud)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.Estatus)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdEmpleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiasSolicitados)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaSolicitud)
                        </td>
                        <td>
                            @{
                                string estadoTexto = "";
                                switch (item.Estatus) {
                                    case EstatusSolicitud.APROBADA:
                                        estadoTexto = "Aprobada";
                                        break;
                                    case EstatusSolicitud.RECHAZADA:
                                        estadoTexto = "Rechazada";
                                        break;
                                    case EstatusSolicitud.ENVIADA:
                                        estadoTexto = "Enviada";
                                        break;
                                    case EstatusSolicitud.EN_REVISION:
                                        estadoTexto = "En Revision";
                                        break;
                                    // Agrega más casos según sea necesario para otros estados
                                    default:
                                        estadoTexto = "Estado Desconocido";
                                        break;
                                }
                                @estadoTexto
                            }
                        </td>
                        <td>
                            <a asp-action="Aprobar" asp-route-id="@item.IdSolicitud" class="btn btn-rounded btn-success btn-sm">Aprobar</a> |
                            <a asp-action="Rechazar" asp-route-id="@item.IdSolicitud" class="btn btn-rounded btn-danger btn-sm">Rechazar</a>
                        </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdEmpleado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiasSolicitados)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaSolicitud)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.Estatus)</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
